{
  "info": {
    "name": "Sweech-Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"test123!@#abc\",\n    \"username\": \"테스트유저\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "signup"
              ]
            },
            "description": "Create a new user account"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"test123!@#abc\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Login to get JWT token"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"새로운유저\",\n    \"password\": \"newpass123!@#abc\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/update",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "update"
              ]
            },
            "description": "Update user information"
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Test Post Title\",\n    \"content\": \"This is a test post content.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts"
              ]
            },
            "description": "Create a new post"
          }
        },
        {
          "name": "Get Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts?page=1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            },
            "description": "Get paginated list of posts"
          }
        },
        {
          "name": "Get Post Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/{{postId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                "{{postId}}"
              ]
            },
            "description": "Get details of a specific post"
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"content\": \"This is a test comment.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/{{postId}}/comments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                "{{postId}}",
                "comments"
              ]
            },
            "description": "Create a new comment on a post"
          }
        },
        {
          "name": "Get Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/{{postId}}/comments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                "{{postId}}",
                "comments"
              ],
              "query": [
                {
                  "key": "cursor",
                  "value": "{{commentCursor}}",
                  "disabled": true
                }
              ]
            },
            "description": "Get paginated list of comments for a post"
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/posts/{{postId}}/comments/{{commentId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "posts",
                "{{postId}}",
                "comments",
                "{{commentId}}"
              ]
            },
            "description": "Delete a comment"
          }
        }
      ]
    },
    {
      "name": "Login Records",
      "item": [
        {
          "name": "Get Login History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/login-records/history",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "login-records",
                "history"
              ]
            },
            "description": "Get user's login history"
          }
        },
        {
          "name": "Get Weekly Rankings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/login-records/rankings",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "login-records",
                "rankings"
              ]
            },
            "description": "Get weekly login rankings"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "postId",
      "value": "",
      "type": "string"
    },
    {
      "key": "commentId",
      "value": "",
      "type": "string"
    },
    {
      "key": "commentCursor",
      "value": "",
      "type": "string"
    }
  ]
}